PidFile=/var/run/zabbix/zabbix_agentd.pid
LogFile=/var/log/zabbix/zabbix_agentd.log
LogFileSize=0
Server={{ ansible_zabbix_agent_server }}
ServerActive={{ ansible_zabbix_agent_server_active }}
{% if ansible_zabbix_agent_hostname is not none %}
Hostname={{ ansible_zabbix_agent_hostname }}
{% endif %}
Include=/etc/zabbix/zabbix_agentd.d/
# low level discovery
EnableRemoteCommands=1
UnsafeUserParameters=1
